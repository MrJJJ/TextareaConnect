{
  "name": "TextAreaConnect",
  "version": "1.0",
  "description": "It's All Text! -clone for Chrome",
  "background_page" : "background.html",
  "browser_action": {
    "default_icon": "icon.png"
  },
    "icons": {
          "128": "icon.png" 
  },
  "permissions": [
        "notifications",
        "contextMenus"
  ],
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["jquery.js", "content.js"],
        "css": [ "style.css" ],
        "all_frames": true
    }

  ]
}
